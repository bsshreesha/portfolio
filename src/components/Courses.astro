  {
    sl: 1,
    course: "Coding Mathematics with Python",
    duration: "37.5 hours",
    status: "Completed",
    year: "2022 - 2024",
    url: "/Math with Python.pdf",
  },
  {
    sl: 2,
    course: "Machine Learning with Python",
    duration: "20 Hours",
    status: "Completed",
    year: "2023 - 2024",
    url: "/ML_with_Python.pdf",
  },
  {
    sl: 3,
    course: "SQL and Relational Databases",
    duration: "12 Hours",
    status: "Completed",
    year: "2023 - 2024",
    url: "/SQL.pdf",
  },
  {
    sl: 4,
    course: "Data Visualization with Python",
