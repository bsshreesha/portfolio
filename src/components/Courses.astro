---

<section id="courses" class="py-5">
  <div class="container" data-aos="fade-left">
    <div class="card border-2 border-danger shadow-lg">
      <div
        class="card-header text-danger text-center fw-bold border-danger border-bottom"
      >
        <h2 class="section-title mb-0">
          <i class="bi bi-person-video3 me-2"></i>Courses & Certifications
        </h2>
      </div>

      <!-- COURSES TABLE -->
      <div class="card-body bg-light-subtle">
        <div class="table-responsive mb-4">
          <table class="table table-hover align-middle mb-0">
            <thead class="table-primary text-white">
              <tr>
                <th style="width:5%">#</th>
                <th style="width:45%">Course</th>
                <th style="width:15%">Duration</th>
                <th style="width:15%">Status</th>
                <th style="width:20%">Academic Year</th>
                <th style="width:8%">View</th>
              </tr>
            </thead>
            <tbody>
              {
                rows.map((r) => (
                  <tr>
                    <th scope="row">{r.sl}</th>
                    <td>{r.course}</td>
                    <td>{r.duration}</td>
                    <td>{r.status}</td>
                    <td>{r.year}</td>
                    <td>
                      <a
                        href={r.url}
                        target="_blank"
                        class="btn btn-sm btn-outline-primary"
                      >
                        <i class="bi bi-eye" />
                      </a>
                    </td>
                  </tr>
                ))
              }
            </tbody>
          </table>
        </div>

        <!-- CERTIFICATE MODAL TRIGGER -->
        <div class="text-center">
          <button
            class="btn btn-outline-danger"
            data-bs-toggle="modal"
            data-bs-target="#certModal"
          >
            <i class="bi bi-eye me-1"></i>View All Certificates
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- MODAL -->
  <div class="modal fade" id="certModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">All Certificates</h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="table-responsive">
            <table class="table table-sm align-middle">
              <thead class="table-light">
                <tr>
                  <th>#</th>
                  <th>Certificate</th>
                  <th>Status</th>
                  <th>Academic Year</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                {
                  rows.map((r) => (
                    <tr>
                      <td>{r.sl}</td>
                      <td>{r.course}</td>
                      <td>{r.status}</td>
                      <td>{r.year}</td>
                      <td>
                        <a
                          href={r.url}
                          target="_blank"
                          class="btn btn-sm btn-outline-primary"
                        >
                          <i class="bi bi-eye" /> View
                        </a>
                      </td>
                    </tr>
                  ))
                }
              </tbody>
            </table>
          </div>
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal">Close</button
          >
        </div>
      </div>
    </div>
  </div>
</section>
